/* LOCATION.STYL ======================================= */

#location
    background: darkBlue
    padding: 20px 0 50px 0
    min-height: 720px
    flexbox()
    align-items: center

    .container
        flexbox()
        justify-content: space-between
        align-items: center


.location
    flexbox()
    flex-flow: column nowrap
    max-width: 360px
    position relative

    &:before
        content: ''
        display: block
        width: 450px
        height 236px
        background: url(../img/location-bg.svg) center no-repeat
        background-size: 450px
        position absolute
        top -110%
        left -120px

    .location__title
        flexbox()
        flex-flow: column nowrap
        align-items: flex-end
        text-align: right
        
        

        span
            font-size: 60px
            color: blue
            font-weight: 700

            &:last-child
                font-size: 45px
                color: white
                font-weight: 600
                flexbox()
                align-items: center

                &:before
                    content: ''
                    display: block
                    width: 140px
                    height 2px
                    background: blue
                    position relative
                    margin-right: 30px

    p
        font-size: 15px
        font-family: font2
        color: white
        text-align: left
        margin: 22px 0

    .location__desc
        flexbox()
        justify-content: flex-start
        align-items: center

        .location__icon
            width: 52px
            height 52px
            margin-right: 22px

        .location__details
            flexbox()
            flex-flow: column nowrap

            span
                font-size: 15px
                font-family: font2
                color: green
                line-height: 24px


.location__map
    max-width 700px
    max-height: 720px

    img
        object-fit: cover