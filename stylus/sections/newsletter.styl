/* NEWSLETTER.STYL ======================================= */

#newsletter
    padding: 90px 0 160px 0
    background: darkBlue

    .container
        text-align: center

        h1
            font-size: 40px
            margin: 0 0 40px 0
            color: white

        p
            font-family: font2
            font-size: 15px
            color: white


    .newsletter
        flexbox()
        flex-center()
        margin-top: 55px

        form
            position relative
            width: 100%
            max-width 300px

            input[type="text"],
            input[type="submit"]
                height: 50px
                border-radius(4px)
                border: none

            input.input[type="text"]
                width: 100%
                background: white
                box-sizing()
                padding: 0 65px 0 15px
                font-size: 14px
                font-weight: 400

                &:focus ~ .inputLabel,
                &:valid ~ .inputLabel
                    display: none

            input[type="submit"]
                position absolute
                top: 0
                right 0
                bottom: 0
                width: 50px
                background: green url(../img/icons/icon-arrowRight.svg) center no-repeat
                background-size: 10px
                cursor pointer
                transition(.5s)

                &:hover
                    background-color: yellow

            .inputLabel
                font-size: 14px
                font-weight: 400
                position absolute
                top: 50%
                margin-top: -7px
                left 15px
                pointer-events: none


