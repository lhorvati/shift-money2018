/* PREVOUIS.STYL ======================================= */


#previous
    padding: 20px 0
    background: lightGray
    background: -moz-linear-gradient(top, lightGray 0%, lightGray 70%, darkBlue 70%, darkBlue 100%)
    background:linear-gradient(to bottom, lightGray 0%, lightGray 70%, darkBlue 70%, darkBlue 100%)

.previous
    flexbox()
    flex-flow: row nowrap
    width: 100%
    margin: 50px auto
    overflow: hidden

    .previousItem
        position relative
        margin-top: 20px
        height: auto
        overflow hidden
        height 400px
        z-index 0
        transition(.5s)

        &:hover
            transform-scale(1.1)
            z-index 2

        &:nth-child(odd)
            align-self: flex-start
        &:nth-child(even)
            align-self: flex-end
            margin-top: 80px

        img
            object-fit: cover
            max-width: fit-content

        a
            width: 100%
            height: 100%
            flexbox()
            flex-center()
            position: relative

            &:hover .previous-overlay
                opacity: 1
                background-color: colorBlack03

            .previous-overlay
                position absolute
                opacity: 0
                transition(.5s)
                background-color: transparent
                flexbox()
                flex-center()
                width: 100%
                height: 100%
                z-index 1


                .previous__btn
                    flexbox()
                    flex-center()
                    flex-flow: column nowrap
                    position: absolute
                    bottom: 30px
                    right: 30px

                    svg path
                        fill: white

